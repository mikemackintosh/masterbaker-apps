export PATH="/usr/local/bin:$PATH"

# Path to the bash it configuration
export BASH_IT="<%= node["apps"]["bashit"]["dir"] %>"

# Lock and Load a custom theme file
export BASH_IT_THEME="<%= node["apps"]["bashit"]["theme"] %>"

# Load Bash It
source $BASH_IT/bash_it.sh

# Autocomplete symlinked directories
bind 'set mark-symlinked-directories on'

# Encrypted Zip
function ze {
    zip -er protected.zip $2
}

# Reload
function reload {
    source $HOME/.bash_profile
}

# Find in file
function fif {
    echo "Beginning Search For: ${1}"
    find . -type f -exec grep -Hn --color $1 {} \;
}

# Networking
function lldp {
    sudo tcpdump -vvv -i any -c 1 ether proto 0x88cc
}

