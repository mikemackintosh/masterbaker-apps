# Git
alias pp='git pull --rebase && git push'

function branch {
    git symbolic-ref --short HEAD
}

function nc {
    nc -z ${@}
}

alias gd='find . -type d -maxdepth 2'

# Quit
alias q!="exit"
alias q="exit"
alias wq!="exit"
alias :q="exit"
alias :q!="exit"

#!/bin/bash

# Get Known SSH Hosts
complete -W "$( python ~/.bin/known_hosts.py )" ssh
complete -W "$( python ~/.bin/known_hosts.py )" dig
complete -W "$( python ~/.bin/known_hosts.py )" ping
complete -W "$( python ~/.bin/known_hosts.py )" curl

# Knife Stuff
complete -W "$( python ~/.bin/known_hosts.py )" knife solo cook
complete -W "$( python ~/.bin/known_hosts.py )" knife solo prepare